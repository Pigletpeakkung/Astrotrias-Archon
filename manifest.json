{
  "name": "Astrotrias Archon - Multidimensional Portfolio",
  "short_name": "Astrotrias",
  "description": "A cosmic journey through multidimensional development expertise. Explore the portfolio of a visionary developer crafting digital experiences across infinite dimensions.",
  "version": "1.2.0",
  "start_url": "/?source=pwa",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#6366f1",
  "background_color": "#0f172a",
  "lang": "en-US",
  "dir": "ltr",
  "categories": [
    "business",
    "developer-tools",
    "productivity",
    "portfolio",
    "technology"
  ],

  "icons": [
    {
      "src": "/assets/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/assets/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/assets/icons/maskable-icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],

  "screenshots": [
    {
      "src": "/assets/screenshots/desktop-dark.webp",
      "sizes": "1920x1080",
      "type": "image/webp",
      "platform": "wide",
      "label": "Cosmic interface in dark mode"
    },
    {
      "src": "/assets/screenshots/mobile-light.webp",
      "sizes": "414x896",
      "type": "image/webp",
      "platform": "narrow",
      "label": "Mobile view in light theme"
    }
  ],

  "shortcuts": [
    {
      "name": "Multidimensional Projects",
      "short_name": "Projects",
      "description": "Explore cosmic development creations",
      "url": "/#dimensions",
      "icons": [{
        "src": "/assets/icons/rocket.png",
        "sizes": "96x96",
        "type": "image/png"
      }]
    },
    {
      "name": "Quantum Connection",
      "short_name": "Contact",
      "description": "Initiate cross-dimensional communication",
      "url": "/#contact",
      "icons": [{
        "src": "/assets/icons/satellite.png",
        "sizes": "96x96",
        "type": "image/png"
      }]
    }
  ],

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [{
        "name": "files",
        "accept": ["image/*", ".pdf", ".txt"]
      }]
    }
  },

  "file_handlers": [{
    "action": "/file-handler",
    "accept": {
      "text/*": [".txt", ".md"],
      "application/json": [".json"]
    },
    "icons": [{
      "src": "/assets/icons/file-handler.png",
      "sizes": "64x64",
      "type": "image/png"
    }]
  }],

  "protocol_handlers": [{
    "protocol": "mailto",
    "url": "/contact?email=%s"
  }],

  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },

  "edge_side_includes": true,
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "prefer_related_applications": false,

  "related_applications": [{
    "platform": "web",
    "url": "https://astrotrias-archon.netlify.app"
  }],

  "widgets": [{
    "name": "Cosmic Status",
    "tag": "cosmic-status",
    "ms_ac_template": "AstrotriasArchonStatus",
    "data": {
      "version": "1.0",
      "api": "/api/widget"
    },
    "screenshots": [{
      "src": "/assets/widget-screenshot.webp",
      "sizes": "300x300",
      "type": "image/webp"
    }]
  }]
}
