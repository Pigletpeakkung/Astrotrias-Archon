---
import '../assets/css/custom.css';

const features = [
  { title: "Cosmic Exploration", description: "Discover the universe with advanced tech.", icon: "🌌" },
  { title: "Quantum Interface", description: "Seamless and intuitive user experience.", icon: "⚡️" },
  { title: "Stellar Performance", description: "Optimized for speed and reliability.", icon: "🚀" },
];
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Astrotrias Archon - A cosmic tech experience" />
  <title>Astrotrias Archon</title>
  <link rel="preload" href="/assets/css/custom.css" as="style" />
  <link rel="stylesheet" href="/assets/css/custom.css" />
</head>

<a href="#main" class="sr-only sr-only--focusable">Skip to main content</a>

<header role="banner">
  <nav class="container nav" role="navigation">
    <div class="nav-brand">
      <a href="/" aria-label="Astrotrias Archon Home">
        <span class="brand-text">Astrotrias Archon</span>
      </a>
    </div>
    <button
      class="nav-toggle quantum-btn sr-only--focusable"
      aria-label="Toggle navigation"
      aria-expanded="false"
      id="nav-toggle"
    >
      ☰
    </button>
    <ul class="nav-list hidden" id="nav-list">
      <li><a href="/" class="nav-link">Home</a></li>
      <li><a href="/about" class="nav-link">About</a></li>
      <li><a href="/features" class="nav-link">Features</a></li>
      <li><a href="/contact" class="nav-link">Contact</a></li>
    </ul>
    <button
      class="quantum-btn quantum-btn--secondary sr-only--focusable"
      aria-label="Toggle dark mode"
      id="theme-toggle"
    >
      🌙
    </button>
  </nav>
</header>

<main role="main" id="main">
  <section class="hero">
    <div class="container text-center">
      <h1 class="fade-in">Welcome to Astrotrias Archon</h1>
      <p class="mt-3 fade-in">Embark on a cosmic journey with cutting-edge technology.</p>
      <a href="/get-started" class="quantum-btn mt-3 fade-in">Launch Now</a>
    </div>
  </section>

  <section class="container features" id="features">
    <h2 class="text-center fade-in">Our Features</h2>
    <div class="grid">
      {features.map((feature, i) => (
        <div class="card fade-in" key={i}>
          <span class="feature-icon">{feature.icon}</span>
          <h3>{feature.title}</h3>
          <p>{feature.description}</p>
        </div>
      ))}
    </div>
  </section>
</main>

<footer class="footer" role="contentinfo">
  <div class="container text-center">
    <p class="fade-in">© 2025 Astrotrias Archon. All rights reserved.</p>
    <ul class="footer-links">
      <li><a href="/privacy" class="footer-link">Privacy</a></li>
      <li><a href="/terms" class="footer-link">Terms</a></li>
      <li><a href="/contact" class="footer-link">Contact</a></li>
    </ul>
  </div>
</footer>

<script src="/assets/js/custom-interactions.js"></script>
