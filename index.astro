---
import '../assets/css/custom.css'; // Import refactored custom.css
const features = [
  { title: "Cosmic Exploration", description: "Discover the universe with advanced tech." },
  { title: "Quantum Interface", description: "Seamless and intuitive user experience." },
  { title: "Stellar Performance", description: "Optimized for speed and reliability." },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Astrotrias Archon - A cosmic tech experience">
  <title>Astrotrias Archon</title>
  <link rel="preload" href="/assets/css/custom.css" as="style">
  <link rel="stylesheet" href="/assets/css/custom.css">
</head>
<body>
  <a href="#main" class="sr-only sr-only--focusable">Skip to main content</a>

  <header role="banner">
    <nav class="container nav" role="navigation">
      <button class="nav-toggle quantum-btn sr-only--focusable" aria-label="Toggle navigation">☰</button>
      <ul class="nav-list hidden">
        <li><a href="/" class="nav-link">Home</a></li>
        <li><a href="/about" class="nav-link">About</a></li>
        <li><a href="/features" class="nav-link">Features</a></li>
      </ul>
      <button class="quantum-btn quantum-btn--secondary sr-only--focusable" aria-label="Toggle dark mode" id="theme-toggle">Toggle Theme</button>
    </nav>
  </header>

  <main role="main" id="main">
    <section class="hero">
      <div class="container text-center">
        <h1 class="fade-in">Welcome to Astrotrias Archon</h1>
        <p class="mt-3">Explore the cosmos with cutting-edge technology.</p>
        <a href="/get-started" class="quantum-btn mt-3">Get Started</a>
      </div>
    </section>

    <section class="container">
      <h2 class="text-center fade-in">Features</h2>
      <div class="grid">
        {features.map((feature) => (
          <div class="card fade-in">
            <h3>{feature.title}</h3>
            <p>{feature.description}</p>
          </div>
        ))}
      </div>
    </section>
  </main>

  <footer class="footer" role="contentinfo">
    <div class="container text-center">
      <p>© 2025 Astrotrias Archon. All rights reserved.</p>
    </div>
  </footer>

  <script>
    // Hamburger menu toggle
    const navToggle = document.querySelector('.nav-toggle');
    const navList = document.querySelector('.nav-list');
    navToggle?.addEventListener('click', () => {
      navList.classList.toggle('hidden');
    });

    // Theme toggle
    const toggleTheme = () => {
      document.body.classList.toggle('dark');
      localStorage.setItem('theme', document.body.classList.contains('dark') ? 'dark' : 'light');
    };
    const themeToggle = document.querySelector('#theme-toggle');
    themeToggle?.addEventListener('click', toggleTheme);
    if (localStorage.getItem('theme') === 'dark' || 
        (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      document.body.classList.add('dark');
    }
  </script>
</body>
</html>

<style>
  /* Scoped styles for Astro */
  .hero {
    padding: 4rem 0;
    background: var(--color-background);
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }
  .footer {
    padding: 2rem 0;
    background: var(--color-background-dark);
    color: var(--color-text-dark);
  }
</style>
